<h1>Registered users</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>User Name</th>
      <th>User Surname</th>
      <th>User Age</th>
      <th>User Email</th>
      <th>User Faculty</th>
      <th>User Specialization</th>
    </tr>
  </thead>
  <tbody>
		<% @users.each do |u| %>
    <tr>
    	<td><%= link_to u.id, user_show_path(id: u)%></td>
      <td><%= u.name %></td>
      <td><%= u.surname %></td>
      <td><%= u.age %></td>
      <td><%= u.email %></td>
      <td><%= u.faculty %></td>
      <td><%= u.specialization %></td>
        <% if user_signed_in?%>
          <td><%= link_to "Edit", user_edit_path(id: u.id) %></td>
          <td><%= link_to "Delete", user_remove_path(id: u.id), method: :delete %></td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
